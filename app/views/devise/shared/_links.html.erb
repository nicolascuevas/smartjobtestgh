<%- if controller_name != 'sessions' %>
<div class="text-center">
  <%= link_to "Ingresar", new_session_path(resource_name), class: "small" %><br />
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="text-center">
  <%= link_to "Registrarse", new_registration_path(resource_name), class: "small" %><br />
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="text-center">
  <%= link_to "¿Olvidaste Contraseña?", new_password_path(resource_name), class: "small" %><br />
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="text-center">
  <%= link_to "¿No reciviste instrucciones para iniciar sesión?", new_confirmation_path(resource_name), class: "small" %><br />
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class="text-center">
  <%= link_to "¿No reciviste instrucciones para iniciar sesión?", new_unlock_path(resource_name), class: "small" %><br />
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="text-center">
    <%= link_to "Ingresa con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "small" %><br />
</div>
  <% end %>
<% end %>


